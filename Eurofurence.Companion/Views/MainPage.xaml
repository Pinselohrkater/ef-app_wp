<Page x:Class="Eurofurence.Companion.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:i="using:Microsoft.Xaml.Interactivity"
      xmlns:ic="using:Microsoft.Xaml.Interactions.Core"
      xmlns:im="using:Microsoft.Xaml.Interactions.Media"
      xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      DataContext="{Binding Source={StaticResource ViewModelLocator},
                            Path=MainViewModel}"
      mc:Ignorable="d">

    <Grid x:Name="LayoutRoot">


        <ScrollViewer>
            <StackPanel>
                <Grid>
                    <Image Height="150"
                           Source="ms-appx:///Assets/Eurofurence/Volatile/background.jpg"
                           Stretch="UniformToFill" />
                    <Image Height="100"
                           Margin="20"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Source="ms-appx:///Assets/Eurofurence/Volatile/logo_small.png" />
                </Grid>
                <Grid x:Name="ContentRoot" Margin="19,9.5,19,0">
                    <StackPanel>
                        <ListView>
                            <interactivity:Interaction.Behaviors>
                                <interactivity:BehaviorCollection>
                                    <ic:EventTriggerBehavior EventName="Tapped">
                                        <ic:InvokeCommandAction Command="{Binding Source={StaticResource ViewModelLocator}, Path=NavigationViewModel.NavigateToEventsByDayPage}" CommandParameter="{Binding UpcomingEventsConferenceDay}" />
                                    </ic:EventTriggerBehavior>

                                </interactivity:BehaviorCollection>
                            </interactivity:Interaction.Behaviors>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListViewItem>
                                <StackPanel>
                                    <Grid>
                                        <TextBlock Style="{StaticResource SubheaderTextBlockStyle}" Text="{Binding UpcomingEventsConferenceDay.Entity.Name}" />

                                    </Grid>
                                    <Grid>
                                        <TextBlock FontSize="{StaticResource TextStyleMediumFontSize}"
                                                   Foreground="{StaticResource PhoneLowBrush}"
                                                   Style="{StaticResource BaseTextBlockStyle}">
                                            Upcoming Events
                                        </TextBlock>
                                        <TextBlock HorizontalAlignment="Right"
                                                   FontSize="{StaticResource TextStyleMediumFontSize}"
                                                   Foreground="{StaticResource PhoneMidBrush}"
                                                   Style="{StaticResource BaseTextBlockStyle}">
                                            <Run FontFamily="{StaticResource IconFontFamily}"
                                                 FontSize="{StaticResource TextStyleSmallFontSize}"
                                                 Foreground="{StaticResource PhoneLowBrush}"
                                                 Text="&#xE121;" />
                                            <Run Text="{Binding Source={StaticResource ServiceLocator}, Path=TimeProvider.CurrentDateTimeMinuteUtc, Converter={StaticResource StringFormatConverter}, ConverterParameter='\{0:hh\\:mm}'}" />
                                        </TextBlock>
                                    </Grid>
                                </StackPanel>
                            </ListViewItem>
                        </ListView>




                        <ListView Margin="-20 0 -20 0" ItemsSource="{Binding UpcomingEvents}">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Name="_ue_grid" Background="Transparent">

                                        <Grid.Resources>
                                            <Storyboard x:Name="_ue_pulseItemStoryboard">
                                                <ColorAnimation AutoReverse="True"
                                                                Duration="0:0:2.00"
                                                                From="{StaticResource EurofurenceThemeColorTransparent}"
                                                                RepeatBehavior="Forever"
                                                                Storyboard.TargetName="_ue_grid"
                                                                Storyboard.TargetProperty="(Grid.Background).(SolidColorBrush.Color)"
                                                                To="{StaticResource EurofurenceThemeColor}" />
                                            </Storyboard>
                                        </Grid.Resources>
                                        <interactivity:Interaction.Behaviors>
                                            <interactivity:BehaviorCollection>
                                                <ic:EventTriggerBehavior EventName="Tapped">
                                                    <ic:InvokeCommandAction Command="{Binding Source={StaticResource ViewModelLocator}, Path=NavigationViewModel.NavigateToEventDetailPage}" CommandParameter="{Binding}" />
                                                </ic:EventTriggerBehavior>
                                                <ic:DataTriggerBehavior Binding="{Binding IsStartingSoon}" Value="True">
                                                    <im:ControlStoryboardAction ControlStoryboardOption="Play" Storyboard="{StaticResource _ue_pulseItemStoryboard}" />
                                                </ic:DataTriggerBehavior>
                                                <ic:DataTriggerBehavior Binding="{Binding IsStartingSoon}" Value="False">
                                                    <im:ControlStoryboardAction ControlStoryboardOption="Stop" Storyboard="{StaticResource _ue_pulseItemStoryboard}" />
                                                </ic:DataTriggerBehavior>
                                                <ic:DataTriggerBehavior Binding="{Binding Entity.AttributesProxy.Extension.IsFavorite}" Value="True">
                                                    <ic:ChangePropertyAction PropertyName="Visibility"
                                                                             TargetObject="{Binding ElementName=_ue_icon_favorite}"
                                                                             Value="Visible" />
                                                </ic:DataTriggerBehavior>
                                                <ic:DataTriggerBehavior Binding="{Binding Entity.AttributesProxy.Extension.IsFavorite}" Value="False">
                                                    <ic:ChangePropertyAction PropertyName="Visibility"
                                                                             TargetObject="{Binding ElementName=_ue_icon_favorite}"
                                                                             Value="Collapsed" />
                                                </ic:DataTriggerBehavior>
                                                <ic:DataTriggerBehavior Binding="{Binding TimeToStart.TotalMinutes}"
                                                                        ComparisonCondition="GreaterThan"
                                                                        Value="30">
                                                    <ic:ChangePropertyAction PropertyName="Visibility"
                                                                             TargetObject="{Binding ElementName=_ue_textblock_startsIn}"
                                                                             Value="Collapsed" />
                                                </ic:DataTriggerBehavior>
                                            </interactivity:BehaviorCollection>
                                        </interactivity:Interaction.Behaviors>

                                        <Grid Margin="20 0 20 0">

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40" />
                                                <ColumnDefinition Width="70" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Name="_ue_icon_favorite"
                                                           Margin="5 5 0 0"
                                                           FontFamily="{StaticResource IconFontFamily}"
                                                           FontSize="24"
                                                           Text="&#xE1CE;" />
                                                <!--
                                                    Visibility="{Binding AttributesProxy.Extension.IsFavorite,
                                                    Converter={StaticResource TrueToVisibleConverter}}"
                                                -->
                                            </StackPanel>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="{Binding Entity.StartTime, Converter={StaticResource StringFormatConverter}, ConverterParameter='\{0:hh\\:mm}'}" />
                                                <TextBlock Foreground="{ThemeResource PhoneMidBrush}">
                                                    <Run FontFamily="{StaticResource IconFontFamily}" Text="&#xE741;" />
                                                    <Run Text="{Binding Entity.EndTime, Converter={StaticResource StringFormatConverter}, ConverterParameter='\{0:hh\\:mm}'}" />
                                                </TextBlock>
                                            </StackPanel>


                                            <StackPanel Grid.Column="2">
                                                <TextBlock MaxHeight="60"
                                                           Style="{StaticResource TitleTextBlockStyle}"
                                                           Text="{Binding Entity.Title}"
                                                           TextTrimming="CharacterEllipsis"
                                                           TextWrapping="Wrap" />
                                                <TextBlock Foreground="{ThemeResource PhoneMidBrush}"
                                                           Text="{Binding Entity.ConferenceRoom.Name}"
                                                           TextWrapping="Wrap" />
                                                <TextBlock Name="_ue_textblock_startsIn" Foreground="{ThemeResource PhoneLowBrush}">
                                                    <Run FontFamily="{StaticResource IconFontFamily}" Text="&#xE121;" />
                                                    <Run>scheduled to start in</Run>
                                                    <Run Text="{Binding TimeToStart, Converter={StaticResource StringFormatConverter}, ConverterParameter='\{0:mm\\:ss}'}" />
                                                    <Run>minutes</Run>
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>

                        </ListView>

                    </StackPanel>

                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>