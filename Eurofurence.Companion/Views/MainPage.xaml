<Page x:Class="Eurofurence.Companion.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:core="using:Microsoft.Xaml.Interactions.Core"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:local="using:Eurofurence.Companion.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      DataContext="{Binding Source={StaticResource ViewModelLocator},
                            Path=MainViewModel}"
      mc:Ignorable="d">

    <!--<Page.BottomAppBar>
        <CommandBar>
            <CommandBar.PrimaryCommands>
                <AppBarButton Command="{Binding Source={StaticResource ViewModelLocator},
                                                Path=NavigationViewModel.NavigateToDebugPage}"
                              Icon="Caption"
                              Label="Debug" />
                <AppBarButton Command="{Binding Source={StaticResource ViewModelLocator},
                                                Path=NavigationViewModel.NavigateToAboutPage}"
                              Icon="ContactInfo"
                              Label="About" />
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Page.BottomAppBar>-->

    <Grid x:Name="LayoutRoot">



        <ScrollViewer>
            <Grid x:Name="ContentRoot" Margin="19,9.5,19,0">
                <StackPanel>
                    <TextBlock Text="{Binding CurrentDateTimeLocal}" />


                    <TextBlock Style="{StaticResource GroupHeaderTextBlockStyle}">
                        Upcoming Events:
                    </TextBlock>


                    <ListView ItemsSource="{Binding UpcomingEvents}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="70" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="{Binding StartTime, Converter={StaticResource StringFormatConverter}, ConverterParameter='\{0:hh\\:mm}'}" />
                                        <TextBlock Foreground="{ThemeResource PhoneMidBrush}">
                                            <Run FontFamily="{StaticResource IconFontFamily}" Text="&#xE741;" />
                                            <Run Text="{Binding EndTime, Converter={StaticResource StringFormatConverter}, ConverterParameter='\{0:hh\\:mm}'}" />
                                        </TextBlock>
                                    </StackPanel>


                                    <StackPanel Grid.Column="1">
                                        <TextBlock MaxHeight="60"
                                                   Style="{StaticResource TitleTextBlockStyle}"
                                                   Text="{Binding Title}"
                                                   TextTrimming="CharacterEllipsis"
                                                   TextWrapping="Wrap" />
                                        <TextBlock Foreground="{ThemeResource PhoneMidBrush}"
                                                   Text="{Binding ConferenceRoom.Name}"
                                                   TextWrapping="Wrap" />
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>

                    </ListView>


                </StackPanel>

            </Grid>
        </ScrollViewer>
    </Grid>
</Page>

