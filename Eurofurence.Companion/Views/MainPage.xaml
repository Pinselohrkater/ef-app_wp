<Page x:Class="Eurofurence.Companion.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:core="using:Microsoft.Xaml.Interactions.Core"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:i="using:Microsoft.Xaml.Interactivity"
      xmlns:ic="using:Microsoft.Xaml.Interactions.Core"
      xmlns:im="using:Microsoft.Xaml.Interactions.Media"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
        DataContext="{Binding Source={StaticResource ViewModelLocator},
                                    Path=MainViewModel}"      
      mc:Ignorable="d">

    <!--<Page.BottomAppBar>
        <CommandBar>
            <CommandBar.PrimaryCommands>
                <AppBarButton Command="{Binding Source={StaticResource ViewModelLocator},
                                                Path=NavigationViewModel.NavigateToDebugPage}"
                              Icon="Caption"
                              Label="Debug" />
                <AppBarButton Command="{Binding Source={StaticResource ViewModelLocator},
                                                Path=NavigationViewModel.NavigateToAboutPage}"
                              Icon="ContactInfo"
                              Label="About" />
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Page.BottomAppBar>-->

    <Grid x:Name="LayoutRoot">


        <ScrollViewer>
            <StackPanel>
                <Grid>
                <Image Source="ms-appx:///Assets/Eurofurence/Volatile/background.jpg" Height="150" Stretch="UniformToFill" />
                    <Image Source="ms-appx:///Assets/Eurofurence/Volatile/logo_small.png" Height="100" 
                           HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20"/>
                </Grid>
                <Grid x:Name="ContentRoot" Margin="19,9.5,19,0">
                <StackPanel>
                        <TextBlock Text="{Binding CurrentDateTimeLocal}" />
                        <TextBlock Style="{StaticResource GroupHeaderTextBlockStyle}">
                        Upcoming Events:
                    </TextBlock>


                    <ListView ItemsSource="{Binding UpcomingEvents}">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Name="_ue_grid" Background="Transparent">

                                    <Grid.Resources>
                                            <Storyboard x:Name="_ue_pulseItemStoryboard">
                                            <ColorAnimation
                                                Storyboard.TargetName="_ue_grid"
                                                Storyboard.TargetProperty="(Grid.Background).(SolidColorBrush.Color)"
                                                RepeatBehavior="Forever"
                                                From="{StaticResource EurofurenceThemeColorTransparent}"
                                                To="{StaticResource EurofurenceThemeColor}"
                                                AutoReverse="True"
                                                Duration="0:0:1.00" />
                                        </Storyboard>
                                    </Grid.Resources>
                                    <interactivity:Interaction.Behaviors>
                                        <interactivity:BehaviorCollection>
                                            <core:EventTriggerBehavior EventName="Tapped">
                                                <core:InvokeCommandAction
                                                    Command="{Binding Source={StaticResource ViewModelLocator}, Path=NavigationViewModel.NavigateToEventDetailPage}"
                                                    CommandParameter="{Binding Entity}" />
                                            </core:EventTriggerBehavior>
                                            <core:DataTriggerBehavior
                                                Binding="{Binding IsStartingSoon}"
                                                Value="True">
                                                <im:ControlStoryboardAction
                                                    Storyboard="{StaticResource _ue_pulseItemStoryboard}"
                                                    ControlStoryboardOption="Play" />
                                            </core:DataTriggerBehavior>
                                            <core:DataTriggerBehavior
                                                Binding="{Binding Entity.AttributesProxy.Extension.IsFavorite}"
                                                Value="True">
                                                <core:ChangePropertyAction PropertyName="Visibility"
                                                                           TargetObject="{Binding ElementName=_ue_icon_favorite}"
                                                                           Value="Visible" />
                                            </core:DataTriggerBehavior>
                                            <core:DataTriggerBehavior
                                                Binding="{Binding Entity.AttributesProxy.Extension.IsFavorite}"
                                                Value="False">
                                                <core:ChangePropertyAction PropertyName="Visibility"
                                                                           TargetObject="{Binding ElementName=_ue_icon_favorite}"
                                                                           Value="Collapsed" />
                                            </core:DataTriggerBehavior>
                                        </interactivity:BehaviorCollection>
                                    </interactivity:Interaction.Behaviors>


                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40" />
                                        <ColumnDefinition Width="70" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Name="_ue_icon_favorite"
                                                   FontFamily="{StaticResource IconFontFamily}"
                                                   FontSize="24" Margin="5 5 0 0"
                                                   Text="&#xE1CE;" />
                                        <!--Visibility="{Binding AttributesProxy.Extension.IsFavorite,
                                                                        Converter={StaticResource TrueToVisibleConverter}}"-->
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Style="{StaticResource TitleTextBlockStyle}"
                                                   Text="{Binding Entity.StartTime, Converter={StaticResource StringFormatConverter}, ConverterParameter='\{0:hh\\:mm}'}" />
                                        <TextBlock Foreground="{ThemeResource PhoneMidBrush}">
                                            <Run FontFamily="{StaticResource IconFontFamily}" Text="&#xE741;" />
                                            <Run
                                                Text="{Binding Entity.EndTime, Converter={StaticResource StringFormatConverter}, ConverterParameter='\{0:hh\\:mm}'}" />
                                        </TextBlock>
                                    </StackPanel>


                                    <StackPanel Grid.Column="2">
                                        <TextBlock MaxHeight="60"
                                                   Style="{StaticResource TitleTextBlockStyle}"
                                                   Text="{Binding Entity.Title}"
                                                   TextTrimming="CharacterEllipsis"
                                                   TextWrapping="Wrap" />
                                        <TextBlock Foreground="{ThemeResource PhoneMidBrush}"
                                                   Text="{Binding Entity.ConferenceRoom.Name}"
                                                   TextWrapping="Wrap" />
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>

                    </ListView>

                </StackPanel>

            </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>