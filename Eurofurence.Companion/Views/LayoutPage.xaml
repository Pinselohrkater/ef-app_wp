<Page
    x:Class="Eurofurence.Companion.Views.LayoutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Eurofurence.Companion.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:behaviors="using:Eurofurence.Companion.ViewModel.Behaviors"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    mc:Ignorable="d" 
    >
    <!--<Page.Background>
        <ImageBrush ImageSource="ms-appx:///Assets/PageBackground.jpg" Stretch="UniformToFill"/>
    </Page.Background>-->
    <Page.Resources>


        <Storyboard x:Name="menuHide" AutoReverse="False">
            <DoubleAnimation Duration="0:0:0.3" 
                             Storyboard.TargetName="_menuBorder" 
                             Storyboard.TargetProperty="Opacity"
                             From="1" To="0"/>
        </Storyboard>
        <Storyboard x:Name="menuShow" AutoReverse="False">
            <DoubleAnimation Duration="0:0:0.3" 
                             Storyboard.TargetName="_menuBorder" 
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1"/>
        </Storyboard>


        <Storyboard x:Name="transitionOut" AutoReverse="False">
            <DoubleAnimation Duration="0:0:0.3" Storyboard.TargetName="tbTitle" Storyboard.TargetProperty="Opacity"
                             From="1" To="0"/>
            <DoubleAnimation Duration="0:0:0.3" Storyboard.TargetName="tbTitle" 
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)"
                             From="0" To="15"/>
        </Storyboard>

        <Storyboard x:Name="transitionIn" AutoReverse="False">
            <DoubleAnimation Duration="0:0:0.3" Storyboard.TargetName="tbTitle" Storyboard.TargetProperty="Opacity"
                             From="0.0" To="1"/>
            <DoubleAnimation Duration="0:0:0.3" Storyboard.TargetName="tbTitle" 
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)"
                             From="-15" To="0"/>




        </Storyboard>
        <Storyboard x:Name="headerOut" AutoReverse="False">
            <DoubleAnimation 
                    Storyboard.TargetName="PanelTitle" 
                    Storyboard.TargetProperty="Opacity"
                    Duration="0:0:0.3" From="1" To="0"/>
            <DoubleAnimation 
                    Storyboard.TargetName="PanelTitle" 
                    Storyboard.TargetProperty="Height"
                    EnableDependentAnimation="True"
                    Duration="0:0:0.5" From="55" To="0">
                <DoubleAnimation.EasingFunction>
                    <PowerEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>

            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Name="headerIn" AutoReverse="False">
            <DoubleAnimation 
                    Storyboard.TargetName="PanelTitle" 
                    Storyboard.TargetProperty="Opacity"
                    Duration="0:0:0.3" From="0" To="1"/>
            <DoubleAnimation 
                    Storyboard.TargetName="PanelTitle" 
                    Storyboard.TargetProperty="Height"
                    EnableDependentAnimation="True"
                    Duration="0:0:0.5" From="0" To="55">
                <DoubleAnimation.EasingFunction>
                    <PowerEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Style x:Key="AppLayoutTitleTextBlockStyle" BasedOn="{StaticResource BaseTextBlockStyle}" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{ThemeResource PhoneFontFamilySemiBold}"/>
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="CharacterSpacing" Value="-50" />
            <Setter Property="LineHeight" Value="57.5"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
        </Style>
    </Page.Resources>
