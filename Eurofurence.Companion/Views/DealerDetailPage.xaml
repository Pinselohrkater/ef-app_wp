<Page x:Class="Eurofurence.Companion.Views.DealerDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Eurofurence.Companion.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      d:DataContext="{Binding Source={StaticResource ViewModelLocator},
                              Path=DealersViewModel.Dealers[0]}"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      mc:Ignorable="d">

    <Grid x:Name="LayoutRoot">

        <ScrollViewer>
            <StackPanel>
                <Grid MinHeight="100">
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0, 0.5" EndPoint="1, 0.5">
                            <GradientStop Offset="0" Color="#00000000" />
                            <GradientStop Offset="1" Color="#00000000" />
                            <GradientStop Offset="0.25" Color="#30FFFFFF" />
                            <GradientStop Offset="0.75" Color="#30FFFFFF" />
                        </LinearGradientBrush>
                    </Grid.Background>
                    <Image MaxHeight="250"
                           Source="{Binding ArtistImage.Content,
                                            Converter={StaticResource BytesToImageConverter}}"
                           Stretch="Uniform" />
                </Grid>

                <StackPanel Margin="20">
                    <TextBlock Style="{ThemeResource GroupHeaderTextBlockStyle}" Text="{Binding AttendeeNickname}" />

                    <TextBlock Margin="15"
                               FontSize="{StaticResource TextStyleMediumFontSize}"
                               Text="{Binding ShortDescription}"
                               TextWrapping="WrapWholeWords" />
                    <TextBlock Margin="15"
                               FontSize="{StaticResource TextStyleMediumFontSize}"
                               Text="{Binding AboutTheArtistText}"
                               TextWrapping="WrapWholeWords" />
                    <TextBlock Margin="15"
                               FontSize="{StaticResource TextStyleMediumFontSize}"
                               Text="{Binding AboutTheArtText}"
                               TextWrapping="WrapWholeWords" />

                </StackPanel>



            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
