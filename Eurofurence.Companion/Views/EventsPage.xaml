                                            <TextBlock Text="{Binding Title}" Margin="0 0 20 0"></TextBlock>
                                            <TextBlock Text="{Binding StartTime}" Margin="0 0 20 0"></TextBlock>
                                            <TextBlock Text="{Binding EndTime}"></TextBlock>
                                        </StackPanel>
                                        
                                        -->
        <!--<TextBlock Text="{Binding StartTime}"></TextBlock>
                                        <TextBlock Text="{Binding EndTime}"></TextBlock>-->
        <!--
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            
                        </ListView>
                        
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
            
        </ListView>-->
    </Grid>
</Page>
