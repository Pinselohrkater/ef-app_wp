<Page
    x:Class="Eurofurence.Companion.Views.EventsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Eurofurence.Companion.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"

    mc:Ignorable="d"
    DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=EventsViewModel}">
    <Page.Resources>
        <DataTemplate x:Key="EventsHeaderTemplate">
            <TextBlock Text="{Binding}" FontSize="35"></TextBlock>
        </DataTemplate>
    </Page.Resources>


    <Grid x:Name="LayoutRoot">

        <!-- Title Panel -->
        <!--<StackPanel Grid.Row="0" Margin="19 0 0 5" Style="{StaticResource StackPanelStyle1}">
            <TextBlock FontSize="20">Foo</TextBlock>
            <TextBlock Text="Event Schedule" Margin="0" Style="{ThemeResource HeaderTextBlockStyle}" CharacterSpacing="{ThemeResource PivotHeaderItemCharacterSpacing}" FontSize="{ThemeResource TextStyleExtraLargePlusFontSize}" Foreground="White"/>
        </StackPanel>-->

        <Border Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Pivot x:Name="eventPivot" Title="Grouped by:" HeaderTemplate="{StaticResource EventsHeaderTemplate}" >
                <Pivot.TitleTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Foreground="{ThemeResource PhoneLowBrush}" />
                    </DataTemplate>
                </Pivot.TitleTemplate>
                <PivotItem Header="Day" Margin="20 0 20 0">
                    <Grid>
                        <ListView ItemsSource="{Binding Path=EventConferenceDays}"
                            HorizontalContentAlignment="Stretch"
                              ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                              IsItemClickEnabled="True"
                              ItemClick="ViewByDay_ItemClick"
                              >
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Background="{ThemeResource ListViewItemPlaceholderBackgroundThemeBrush}" Margin="0,9.5,0,0" Grid.Column="0" HorizontalAlignment="Left">
                                            <Border CornerRadius="0" Width="60" Height="60" Background="{ThemeResource AppLowContrastTransparentBackgroundBrush}">
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Date, Converter={StaticResource StringFormatConverter}, ConverterParameter='\{0:dd}'}"
                                                               Foreground="{ThemeResource PhoneForegroundBrush}"  TextAlignment="Center" FontSize="24"/>
                                                    <TextBlock Text="{Binding Date, Converter={StaticResource StringFormatConverter}, ConverterParameter='\{0:MMM}'}"
                                                               Foreground="{ThemeResource PhoneMidBrush}"  TextAlignment="Center" />
                                                </StackPanel>
                                            </Border>
                                        </Border>
                                        <StackPanel Grid.Column="1" Margin="14.5,5,0,0">
                                            <TextBlock Text="{Binding WeekdayFullname}" Style="{ThemeResource ListViewItemTextBlockStyle}"/>
                                            <TextBlock Text="{Binding Name}" Style="{ThemeResource ListViewItemContentTextBlockStyle}" Foreground="{ThemeResource PhoneMidBrush}"/>
                                            <!--<TextBlock Text="{Binding Date}" Style="{ThemeResource ListViewItemContentTextBlockStyle}" Foreground="{ThemeResource PhoneMidBrush}" />-->
                                        </StackPanel>

                                    </Grid>

                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </PivotItem>
                <PivotItem Header="Topic">
                    <Grid>
                        <ListView ItemsSource="{Binding Path=EventConferenceTracks}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" Style="{StaticResource TitleTextBlockStyle}"></TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </PivotItem>
                <PivotItem Header="Room">
                    <Grid>
                        <ListView ItemsSource="{Binding Path=EventConferenceRooms}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" Style="{StaticResource TitleTextBlockStyle}"></TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </PivotItem>
                <PivotItem Header="Search" Margin="20 0 20 0">
                    <Grid>
                        <TextBox  PlaceholderText="Type search keywords here"
                            Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <ListView Margin="0 60 0 0" ItemsSource="{Binding EventEntrySearchResults}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <interactivity:Interaction.Behaviors>
                                            <interactivity:BehaviorCollection>
                                                <core:EventTriggerBehavior EventName="Tapped">
                                                    <core:InvokeCommandAction 
                                                Command="{Binding Source={StaticResource ViewModelLocator}, Path=NavigationViewModel.NavigateToEventDetailPage}"
                                                CommandParameter="{Binding}"
                                                ></core:InvokeCommandAction>
                                                </core:EventTriggerBehavior>
                                            </interactivity:BehaviorCollection>
                                        </interactivity:Interaction.Behaviors>

                                        <StackPanel Grid.Column="1" Margin="0 0 0 5">
                                            <TextBlock Text="{Binding Title}" Style="{StaticResource TitleTextBlockStyle}" TextWrapping="Wrap"></TextBlock>
                                            <TextBlock Foreground="{ThemeResource PhoneMidBrush}">
                                                <Run Text="{Binding ConferenceDay.WeekdayFullname}" />,
                                                <Run Text="{Binding StartTime, Converter={StaticResource StringFormatConverter}, ConverterParameter='\{0:hh\\:mm}'}" /> - 
                                                <Run Text="{Binding EndTime, Converter={StaticResource StringFormatConverter}, ConverterParameter='\{0:hh\\:mm}'}" />
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>

                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </PivotItem>

            </Pivot>
        </Border>




