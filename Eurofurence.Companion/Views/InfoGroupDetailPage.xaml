<Page
    x:Class="Eurofurence.Companion.Views.InfoGroupDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Eurofurence.Companion.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=InfoViewModel.InfoGroups[0]}"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    
    <Grid x:Name="LayoutRoot">
        <Grid Grid.Row="1" x:Name="ContentRoot" Margin="19,9.5,19,0">
            <ScrollViewer x:Name="svMain">
                <StackPanel>
                    <TextBlock Foreground="{ThemeResource PhoneAccentBrush}"
                        Style="{StaticResource BodyTextBlockStyle}"
                        FontSize="{StaticResource TextStyleMediumFontSize}"
                        FontWeight="Bold"
                        Text="Table of Contents" />

                    <ListView 
                        Margin="0 0 0 30"
                        Name="lvToc" ItemsSource="{Binding Entries}"
                              IsItemClickEnabled="True"
                              ItemClick="lvToc_ItemClick">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Height" Value="30"/>
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock  Grid.Column="1"
                                        Style="{StaticResource ListViewItemContentTextBlockStyle}"
                                        Margin="0"
                                        Text="{Binding Title}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    
                    <ItemsControl Name="icDetail" ItemsSource="{Binding Entries}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0 0 0 20">
                                    <Grid>
                                        <TextBlock Foreground="{ThemeResource PhoneAccentBrush}"
                        Style="{StaticResource BodyTextBlockStyle}"
                        FontSize="{StaticResource TextStyleMediumFontSize}"
                        FontWeight="Bold"
                        Text="{Binding Title}" />
                                        <!--<TextBlock 
                                            Margin="0 0 40 10"
                                            Foreground="{ThemeResource PhoneMidBrush}"
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            FontSize="{StaticResource TextStyleExtraLargeFontSize}"
                                                Text="{Binding Title}" />-->

                                        <TextBlock Margin="0 0 0 0"  Text="&#xE898;"
                                                     Tapped="TextBlock_Tapped"
                                            HorizontalAlignment="Right"
                                                     FontSize="{StaticResource TextStyleExtraLargeFontSize}"
                                            FontFamily="{StaticResource IconFontFamily}" />
                                        
                                    </Grid>
                                    <Grid>
                                        <TextBlock Text="{Binding Text}" 
                               Style="{StaticResource BodyTextBlockStyle}" 
                                            FontSize="{StaticResource TextStyleMediumFontSize}"
                               TextWrapping="WrapWholeWords"></TextBlock>
                                    </Grid>
                                    <!--<TextBlock Text="{Binding Text}" 
                                               Style="{StaticResource BodyTextBlockStyle}" FontSize="14"
                                               TextWrapping="Wrap"
                                               />-->
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
